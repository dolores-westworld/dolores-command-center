{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dolores.local/schemas/skill.schema.json",
  "title": "Dolores Skill",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "version",
    "purpose",
    "inputs",
    "outputs",
    "rules",
    "stop_conditions",
    "provider_affinity"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "version": {
      "type": "string",
      "minLength": 1,
      "pattern": "^v?[0-9]+\\.[0-9]+$"
    },
    "purpose": {
      "type": "string",
      "minLength": 1
    },
    "inputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "type", "required"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "type": { "type": "string", "minLength": 1 },
          "required": { "type": "boolean" },
          "notes": { "type": "string" }
        }
      }
    },
    "outputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "type"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "type": { "type": "string", "minLength": 1 },
          "notes": { "type": "string" }
        }
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "stop_conditions": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "provider_affinity": {
      "type": "object",
      "additionalProperties": false,
      "required": ["primary", "fallback"],
      "properties": {
        "primary": { "$ref": "#/$defs/provider" },
        "fallback": {
          "type": "array",
          "items": { "$ref": "#/$defs/provider" }
        }
      }
    }
  },
  "$defs": {
    "provider": {
      "type": "string",
      "enum": ["opus", "kimi_2_5", "codex", "system"]
    }
  }
}
